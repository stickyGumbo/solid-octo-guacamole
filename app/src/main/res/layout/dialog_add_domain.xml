<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.dialog.MaterialAlertDialogBuilder
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- This is a placeholder layout for the dialog builder to inflate -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/custom_domain_input"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/custom_domain_hint"
            android:inputType="text"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/blocklist_url_input"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/blocklist_url_hint"
            android:inputType="textUri"
            android:layout_marginBottom="16dp" />

    </LinearLayout>

</com.google.android.material.dialog.MaterialAlertDialogBuilder>
